---
// NormalPageLayout.astro
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "A place where I share my thoughts, experiences, and insights about technology and life." } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen overflow-hidden">
    <div class="w-full h-screen">
      <!-- Main Content Grid -->
      <main class="grid grid-cols-1 md:grid-cols-10 gap-0 w-full h-full relative">
        <!-- Left Column - Complex Layout with Collapsible Headers -->
        <div class="md:col-span-7 h-full overflow-hidden relative flex flex-col">
          <!-- Navigation Bar Row 1 - Always Visible -->
          <div id="nav-row-1" class="bg-white/80 backdrop-blur-md border-b border-gray-200 transition-all duration-300 ease-in-out flex-shrink-0">
            <div class="px-8 py-5 w-full">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-10">
                  <a href="/" class="text-lg font-semibold text-gray-800 hover:text-blue-600 transition-colors">Home</a>
                  <a href="/about" class="text-gray-600 hover:text-blue-600 transition-colors">About</a>
                  <a href="/blog" class="text-gray-600 hover:text-blue-600 transition-colors">Blog</a>
                  <a href="/projects" class="text-gray-600 hover:text-blue-600 transition-colors">Projects</a>
                  <a href="/contact" class="text-gray-600 hover:text-blue-600 transition-colors">Contact</a>
                </div>
                <div class="flex items-center space-x-6">
                  <span class="text-sm text-gray-500">Welcome back, User!</span>
                  <span class="text-xs text-gray-400">|</span>
                  <span class="text-sm text-gray-600">Today's Goal: 3 articles</span>
                  <span class="text-xs text-gray-400">|</span>
                  <span class="text-sm text-green-600">Online: 24 users</span>
                  <button class="text-gray-600 hover:text-blue-600 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                  </button>
                  <button class="text-gray-600 hover:text-blue-600 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
                    </svg>
                  </button>
                  <button class="text-gray-600 hover:text-blue-600 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </button>
                  <span class="text-xs text-gray-400">|</span>
                  <span class="text-sm text-blue-600">New Message (2)</span>
                  <span class="text-xs text-gray-400">|</span>
                  <!-- Dynamic Nav Toggle Button -->
                  <button id="nav-toggle" class="text-gray-600 hover:text-blue-600 transition-colors flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                    <span class="text-xs">More</span>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Dynamic Navigation Rows Container -->
          <div id="dynamic-nav-container" class="transition-all duration-500 ease-in-out overflow-hidden" style="max-height: 0;">
            <!-- Navigation Bar Row 2 -->
            <div id="nav-row-2" class="bg-white/70 backdrop-blur-md border-b border-gray-200 transition-all duration-300 ease-in-out flex-shrink-0">
              <div class="px-8 py-4 w-full">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-8">
                    <span class="text-sm text-gray-500">Category:</span>
                    <a href="#" class="text-sm text-blue-600 hover:text-blue-800 transition-colors">Technology</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Design</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Development</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Tutorials</a>
                    <span class="text-sm text-gray-400">|</span>
                    <span class="text-sm text-gray-500">Tags:</span>
                    <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">Astro</span>
                    <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">TailwindCSS</span>
                    <span class="text-xs bg-purple-100 text-purple-800 px-2 py-1 rounded">React</span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-xs text-gray-500">Last updated: 2 hours ago</span>
                    <span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">New</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Navigation Bar Row 3 -->
            <div id="nav-row-3" class="bg-white/60 backdrop-blur-md border-b border-gray-200 transition-all duration-300 ease-in-out flex-shrink-0">
              <div class="px-8 py-4 w-full">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-8">
                    <span class="text-sm text-gray-500">Filter:</span>
                    <a href="#" class="text-sm text-blue-600 hover:text-blue-800 transition-colors">All Posts</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Featured</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Popular</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Recent</a>
                    <span class="text-sm text-gray-400">|</span>
                    <span class="text-sm text-gray-500">Sort:</span>
                    <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">Date</span>
                    <span class="text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded">Views</span>
                    <span class="text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded">Likes</span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-xs text-gray-500">Total posts: 156</span>
                    <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">Active</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Navigation Bar Row 4 -->
            <div id="nav-row-4" class="bg-white/50 backdrop-blur-md border-b border-gray-200 transition-all duration-300 ease-in-out flex-shrink-0">
              <div class="px-8 py-4 w-full">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-8">
                    <span class="text-sm text-gray-500">Tools:</span>
                    <a href="#" class="text-sm text-blue-600 hover:text-blue-800 transition-colors">Search</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Bookmarks</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">History</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Settings</a>
                    <span class="text-sm text-gray-400">|</span>
                    <span class="text-sm text-gray-500">Theme:</span>
                    <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">Light</span>
                    <span class="text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded">Dark</span>
                    <span class="text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded">Auto</span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-xs text-gray-500">Language: EN</span>
                    <span class="text-xs bg-purple-100 text-purple-800 px-2 py-1 rounded">Beta</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Navigation Bar Row 5 -->
            <div id="nav-row-5" class="bg-white/40 backdrop-blur-md border-b border-gray-200 transition-all duration-300 ease-in-out flex-shrink-0">
              <div class="px-8 py-4 w-full">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-8">
                    <span class="text-sm text-gray-500">Advanced:</span>
                    <a href="#" class="text-sm text-blue-600 hover:text-blue-800 transition-colors">Analytics</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Reports</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">Export</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">API</a>
                    <span class="text-sm text-gray-400">|</span>
                    <span class="text-sm text-gray-500">Status:</span>
                    <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">Online</span>
                    <span class="text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded">Offline</span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-xs text-gray-500">Version: 2.1.0</span>
                    <span class="text-xs bg-orange-100 text-orange-800 px-2 py-1 rounded">Update</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Title Bar Row 1 -->
          <div id="title-row-1" class="bg-white/60 backdrop-blur-md border-b border-gray-200 transition-all duration-300 ease-in-out flex-shrink-0">
            <div class="px-8 py-6 w-full">
              <div class="flex items-center justify-between">
                <h1 class="text-3xl font-bold text-gray-800">Advanced Layout with Collapsible Headers</h1>
                <div class="flex items-center space-x-4">
                  <span class="text-sm text-gray-500">Reading Level: Intermediate</span>
                  <span class="text-sm text-gray-500">Difficulty: ⭐⭐⭐</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Title Bar Row 2 -->
          <div id="title-row-2" class="bg-white/50 backdrop-blur-md border-b border-gray-200 transition-all duration-300 ease-in-out flex-shrink-0">
            <div class="px-8 py-5 w-full">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-8">
                  <span class="text-sm text-gray-600">Published: March 25, 2024</span>
                  <span class="text-sm text-gray-600">Reading time: 8 min</span>
                  <span class="text-sm text-gray-600">Author: John Doe</span>
                  <span class="text-sm text-gray-600">Views: 1,234</span>
                </div>
                <div class="flex items-center space-x-4">
                  <button class="text-gray-600 hover:text-blue-600 transition-colors flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                    </svg>
                    <span class="text-xs">Share</span>
                  </button>
                  <button class="text-gray-600 hover:text-blue-600 transition-colors flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                    <span class="text-xs">Like</span>
                  </button>
                  <button class="text-gray-600 hover:text-blue-600 transition-colors flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                    </svg>
                    <span class="text-xs">Bookmark</span>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Scrollable Content Area -->
          <div class="flex-1 overflow-y-auto min-h-0" id="content-scroll">
            <div class="px-8 py-8" style="margin-left: 10%; margin-right: 10%;">
              <div class="bg-white/30 backdrop-blur-lg rounded-lg p-8 shadow-lg">
                <slot name="left-content" />
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column - Fixed Background -->
        <div class="md:col-span-3 h-full relative">
          <!-- Fixed Background Layer -->
          <div class="absolute inset-0 bg-cover bg-center bg-no-repeat bg-fixed" style="background-image: url('/images/backgrounds/brick-wall.png');"></div>
          
          <!-- Content Layer - Fixed Position -->
          <div class="absolute inset-0 z-10">
            <div class="h-full flex flex-col">
              <div class="flex-1 overflow-y-auto px-4 py-8">
                <div class="space-y-6">
            <slot name="right-content" />
                </div>
              </div>
              
              <!-- Footer - Fixed at bottom -->
              <div class="flex-shrink-0 px-4 pb-8">
                <footer class="text-center pt-8 border-t border-gray-200">
                  <p class="text-gray-600">
                    © 2024 My Blog. Built with Astro and TailwindCSS.
                  </p>
                </footer>
              </div>
            </div>
          </div>
        </div>

        <!-- Button K - Floating Button -->
        <button 
          id="toggle-button" 
          class="fixed z-50 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-full shadow-lg transition-all duration-300 transform hover:scale-110"
          style="top: 20px; right: 20px;"
        >
          K
        </button>
      </main>

      <!-- Hidden Common Area for future upgrades -->
      <div class="hidden">
        <slot name="common-area" />
      </div>
    </div>

    <script>
      import { DynamicNavigation } from '../scripts/navigation.ts';
      
      // Initialize the dynamic navigation system
      document.addEventListener('DOMContentLoaded', () => {
        new DynamicNavigation();
      });
    </script>
  </body>
</html>

